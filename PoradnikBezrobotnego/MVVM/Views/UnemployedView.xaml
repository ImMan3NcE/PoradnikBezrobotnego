<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PoradnikBezrobotnego.MVVM.Views.UnemployedView"
             Title="UnemployedView"
             NavigationPage.HasNavigationBar="False">
    
    
    <Grid RowDefinitions=".2*,.7*,.1*"
          ColumnDefinitions=".1*,.8*,.1*">
        <Grid Grid.Row="0"
              Grid.ColumnSpan="3"
              BackgroundColor="Beige"
              RowDefinitions=".8*,.2*"
              Padding="10">

            <Image Source="kimjestbezr.png"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
            <Label StyleClass="MenuLbl" Grid.Row="1" Text="Kim jest bezrobotny?"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>

        </Grid>

        <ScrollView Grid.Row="1" Grid.Column="1"  BackgroundColor="AliceBlue" Padding="0">
            <Label 
            Text="..."
            VerticalOptions="Center" 
            x:Name="unemployedlbl"
            HorizontalOptions="Center" 
            TextType="Html"
            Padding="10"/>
        </ScrollView>



    </Grid>
</ContentPage>